# ==============================================================================
# LYRICLESS - DEVELOPMENT ENVIRONMENT VARIABLES
# ==============================================================================
# Docker development configuration

# Application
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0
NEXT_TELEMETRY_DISABLED=1

# Database
DATABASE_URL=file:./prisma/dev.db

# Development Hot Reload
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# WebAssembly Configuration (development)
FFMPEG_WASM_CDN=https://unpkg.com/@ffmpeg/core@0.12.6/dist

# CORS Configuration (permissive for development)
CORS_ORIGINS=*

# Development Debugging
DEBUG=*
VERBOSE=true

# Development API Keys (safe for development)
DEV_API_KEY=dev-key-123
JWT_SECRET=dev-secret-not-for-production

# Browser Extension Development
EXTENSION_DEV_MODE=true